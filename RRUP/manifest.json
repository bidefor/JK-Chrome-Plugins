{
    "manifest_version": 2,

    "name": "RRUP",
    "version": "1.0.0",
    "description": "Record Read URL Pages",

    "browser_action": {
        "default_icon": "assets/images/icons/19.png",
        "default_popup": "index.html",
        "default_title": "Record Read URL Pages"
    },

    "permissions": [
        "contextMenus",
        "tabs",
        "http://*/*",
        "https://*/*"
    ],

    "homepage_url": "http://rrup.ml",

    "background": {
        "scripts": ["assets/js/background.js"]
    },

    "icons": {
        "16": "assets/images/icons/16.png",
        "48": "assets/images/icons/48.png",
        "128": "assets/images/icons/128.png"
    },

    "content_security_policy": "script-src 'self' https://rrup.sinaapp.com; object-src 'self'"
}
